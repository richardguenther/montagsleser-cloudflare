{% extends "base.njk" %}

{% block main %}
  <h1 class="mx-auto my-2 text-6xl text-red-900">Montagsleser</h1>

  <div >
    <ul class="flex flex-row flex-wrap justify-between">
      {% for post in posts %}
        <li class="my-2 max-w-xs bg-gray-300">
          <p>
            <a class="text-2xl" href=#>{{post.title | safe}}</a>
          </p>

          <picture class="">
            {# <img class="my-1 w-auto" src={{post._embedded['wp:featuredmedia']['0'].source_url}} alt="Bild"/> #}
            <img class="my-1 w-auto" src=/files/{{post.bild}} alt={{post.klappentext}}/>
          </picture>

          <div class="w-full">
            <audio controls preload="none">
              <source src=/files/{{post.mp3}} type="audio/mp3" >
  Your browser does not support the audio!
</audio>
          </div>

          <p>{{post.klappentext}}</p>
          <p>von {{post.von}}</p>

        </li>

      {% endfor %}
    </div>
  </ul>
{% endblock %}