---
title: Home
eleventyNavigation:
  key: Hause
  order: 1
---
{% extends "base.njk" %}

{% block main %}
  <h1 class="mx-auto my-2 text-6xl text-red-900">Montagsleser</h1>

  <div >
    <ul class="flex flex-row flex-wrap justify-between">
      {% for post in posts %}
        <li class="my-2 max-w-xs bg-gray-300">
          <p>
            <a class="text-2xl" href=#>{{post.title | safe}}</a>
          </p>

          {% image post.bildUpload, post.title, "(min-width: 5em) 10vw, 20vw" %}

          <div class="w-full">
            <audio controls preload="none">
              <source src={{post.mp3Upload}} type="audio/mp3" >
  Your browser does not support the audio!
</audio>
          </div>

          <p>{{post.klappentext}}</p>
          <p>von {{post.von}}</p>

        </li>

      {% endfor %}
    </div>
  </ul>
{% endblock %}